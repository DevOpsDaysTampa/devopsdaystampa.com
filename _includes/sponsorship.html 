<!-- Begin sponsorship Section -->
<section id="sponsorship" class="sponsorship">
	<div class="content-wrapper">
		<div class="col-lg-8 col-md-10 col-lg-offset-2 col-md-offset-1">
			<h3>{{ site.sponsorshipTitle }}</h3>
            {% for sponsorshipOffer in site.sponsorshipOffers %}
	            {% assign colWidth = 12 | divided_by: forloop.length %}
	            {% assign check = forloop.index | modulo:2 %}
	            <div class="col-md-{{ colWidth }} col-sm-{{ colWidth }} pricing-col {% if sponsorshipOffer.featured != null %}pricing-col-featured{% endif %} animated hiding" data-animation="{% if forloop.index == 1 %}fadeInLeft{% elsif forloop.index == forloop.length %}fadeInRight{% else %}fadeInDown{% endif %}" data-delay="{% if check == 0 %}0{% else %}500{% endif %}">
	            	{% if sponsorshipOffer.ribbon != null %}<div class="pricing-ribbon">{{ sponsorshipOffer.ribbon }}</div>{% endif %}
					<div class="pricing-header">
						<p class="title">{{ sponsorshipOffer.name }}</p>
						<p class="price">{{ sponsorshipOffer.price }} <span class="currency">{{ sponsorshipOffer.priceCurrency }}</span></p>
					</div>
					<div class="pricing-content">
						<ul>
							{% for listItem in sponsorshipOffer.ticketContentList %}
							<li>{{ listItem }}</li>
							{% endfor %}
						</ul>
						{% if sponsorshipOffer.soldOut == true %}
						<span class="button disabled">{{ sponsorshipOffer.soldOutText }}</span>
						{% elsif sponsorshipOffer.disabled != true %}
						<a class="button" href="{{ sponsorshipOffer.buyButtonLink }}" target="_blank">{{ sponsorshipOffer.buyButtonText }}</a>
						{% else %}
		           		{% assign ticketValidFrom = sponsorshipOffer.validFrom | split: "T" %}
						<span class="button disabled fallback">Ticket sales will begin on {{ ticketValidFrom[0] | date: "%-d %B %Y"}} {{ ticketValidFrom[1] }}</span>
						{% endif %}
					</div>
				</div>
            {% endfor %}
		</div>
	</div>
</section>
<!-- End sponsorship Section -->